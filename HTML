<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verificação de Acesso ao Evento</title>
    <style>
        .pass { color: green; }
        .fail { color: red; }
    </style>
</head>
<body>
<h2>Verificação de Acesso ao Evento</h2>

    <!-- Formulário para entrada de dados -->
Número do Ingresso: <input  id="ingresso"><br><br>
Idade: <input  id="idade"><br><br>
<button onclick="verificarAcesso()">Verificar</button> <!---onclick é um manipulador de eventos-->
<h3>Resultados:</h3>
<div id="resultados"></div>

    <script>
        // Função para verificar ingresso e idade
        function verificarAcesso() {
            // Limpar resultados anteriores
            const resultadosDiv = document.getElementById('resultados');
            resultadosDiv.innerHTML = ''; // limpa o conteúdo anterior. 

            // Obter valores de entrada
            const ingresso = document.getElementById('ingresso').value;
            const idade = Number(document.getElementById('idade').value);

            // Validar ingresso (deve ter pelo menos 5 caracteres)
            if (ingresso.length >= 5) {
                resultadosDiv.innerHTML += '<p class="pass">✔️ Ingresso válido</p>';
            } else {
                resultadosDiv.innerHTML += '<p class="fail">❌ Ingresso inválido (mínimo 5 caracteres)</p>';
            }

            // Validar idade (deve ser maior ou igual a 18 anos)
            if (idade >= 18) {
                resultadosDiv.innerHTML += '<p class="pass">✔️ Idade permitida</p>';
            } else {
                resultadosDiv.innerHTML += '<p class="fail">❌ Acesso negado (idade mínima: 18 anos)</p>';
            }
        }
    </script>
</body>
</html>
